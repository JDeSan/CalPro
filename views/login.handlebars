<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Login</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma.min.css" />
  <script src="https://kit.fontawesome.com/5a6aa9eff1.js" crossorigin="anonymous"></script>
  <script src="../public/js/login.js"></script>
</head>

<body>
  <section class="hero is-large is-info is-fullheight">
    <div class="container is-fluid mt-6 pt-6">
      <div class="columns is-centered">
        <div class="column is-5-tablet is-4-desktop is-3-widescreen">
          <form class="box">
            <div class="field">
              <h1 class="label is-size-5 fa fa-calendar">CalPro</h1>
              <h2 class="label is-size-4 has-text-centered 
              mb-4">Login</h2>
              <label class="label">Email</label>
              <div class="control has-icons-left">
                <input type="email" placeholder="email" class="input" required>
                <span class="icon is-small is-left">
                  <i class="fa fa-envelope"></i>
                </span>
              </div>
              <div class="field">
                <label class="label mt-2">Password</label>
                <div class="control has-icons-left">
                  <input type="password" placeholder="password" class="input" required>
                  <span class="icon is-small is-left">
                    <i class="fa fa-key"></i>
                  </span>
                </div>
                <div class="form-group">
                  <button class="button is-link is-fullwidth mt-5">login</button>
                  <button class="button is-link mt-4 is-fullwidth"><a href="./signup.html">Sign Up</a></button>
                </div>
          </form>
        </div>
      </div>
    </div>
    </div>
  </section>

</body>

</html>